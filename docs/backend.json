
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores user education, experience, and target job roles.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "fullName": { "type": "string" },
        "education": { "type": "string", "description": "User's educational background" },
        "targetRole": { "type": "string", "description": "The job role they are preparing for" },
        "experienceLevel": { "type": "string", "enum": ["junior", "mid", "senior", "lead"] },
        "skills": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["userId", "fullName"]
    },
    "InterviewSession": {
      "title": "Interview Session",
      "description": "Records of a specific mock interview session.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "role": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "questions": { "type": "array", "items": { "type": "string" } },
        "answers": { "type": "array", "items": { "type": "object" } },
        "overallScore": { "type": "number" }
      }
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "User profile data"
    },
    "/interviews/{interviewId}": {
      "schema": "InterviewSession",
      "description": "Interview session records"
    }
  }
}
