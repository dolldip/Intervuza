rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==========================================
    // GLOBAL HELPER FUNCTIONS
    // ==========================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Comprehensive Admin Check: Checks specific email OR existence in roles_admin collection
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "dollyjajra123@gmail.com" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      ) && request.auth.token.email_verified == true;
    }

    // ==========================================
    // COLLECTION RULES
    // ==========================================

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }

    match /payments/{paymentId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // Standard patterns for nested user data
    match /users/{userId}/{subcollection}/{id} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/interviewSessions/{sessionId}/interviewQuestions/{questionId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/improvementPlans/{planId}/practiceSuggestions/{suggestionId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Global catalogs
    match /skills/{id} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /achievements/{id} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /subscriptionPlans/{id} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /questionBankItems/{id} { allow read, write: if isAdmin(); }

    // Company/Recruiter data
    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if (isSignedIn() && resource.data.adminUserId == request.auth.uid) || isAdmin();
      allow delete: if isAdmin();
    }

    match /companies/{companyId}/jobPostings/{jobPostingId} {
      allow read: if isSignedIn();
      allow write: if (isSignedIn() && (
        request.resource.data.createdByUserId == request.auth.uid || 
        request.resource.data.companyAdminUserId == request.auth.uid
      )) || isAdmin();
    }

    match /companies/{companyId}/jobPostings/{jobPostingId}/candidateApplications/{applicationId} {
      allow read, write: if isSignedIn() && (
        resource.data.userId == request.auth.uid || 
        resource.data.jobPostingCreatedByUserId == request.auth.uid || 
        resource.data.companyAdminUserId == request.auth.uid ||
        isAdmin()
      );
    }
  }
}